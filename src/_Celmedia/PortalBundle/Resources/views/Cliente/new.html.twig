{%   extends("CelmediaPortalSmsBundle::layout.html.twig") %}


{% block contenido %}
{% block body -%}
<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Cliente <small>Creacion de cliente</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-bullhorn"></i> Cliente</li>
      </ol>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-8">

    <h1>Ingrese Cliente</h1>
      {% if not form.vars.valid %}
      <div class="alert alert-error">


        <div class="alert alert-dismissable alert-danger">
          <button data-dismiss="alert" class="close" type="button">Ã—</button>
          <strong>Error Ctm!</strong> {{ form_errors(form) }}

        </div>

      </div>
      {% endif %}

      

      <div class="row">
        <div class="col-lg-6">

         <form role="form" action="{{  path('cliente_create') }}" method="post" {{ form_enctype(form) }}>

          <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre  , {'attr': {'class': 'form-control'}} ) }}
          </div>


          <div class="form-group">
            <label>Correo</label>
            {{ form_widget(form.correo  , {'attr': {'class': 'form-control' }} ) }}
          </div> 

     
          <div class="form-group">
            <label>Telefono</label>
            {{ form_widget(form.telefono  , {'attr': {'class': 'form-control' }} ) }}
          </div> 
          

          <div class="form-group">
            <label>Grupo</label>
            {{ form_widget(form.grupos  , {'attr': {'class': 'form-control' }} ) }}
          </div>

          {{  form_row(  form._token ) }}


          <button class="btn btn-default" type="submit">Grabar</button>
          <button class="btn btn-default" type="reset">Clear</button>  

        </form>

      </div>

    </div>



  </div>
</div>

</div>

{% endblock %}

{% endblock %}
