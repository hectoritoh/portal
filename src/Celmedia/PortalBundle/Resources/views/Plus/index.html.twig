    <div class="span4 span_same">
        <div class="card paso3_card">
            <h3 class="card-heading simple paso3_color pull-right">Paso3</h3>
            <i class="fa fa-check fa-4x paso3_color"></i>
            <div class="card-comments">
                <div  class="comments"  style="border-top:1px solid #31708F;">
                    <div class="media">                 
                        <div class="media-body">
                            <h4 class="media-heading">Envio de mensajes</h4>
