</div>



{% endblock %}



{%  block js %}





{{ parent() }}

<script type="text/javascript" >

    $(document).ready(function() {



        var max = 0;

        $(".card").each(function(i, e) {
            var height = $(e).height();
            max = height > max ? height : max;
        });

        $(".card").height(max);




    });

</script>

{% endblock %}