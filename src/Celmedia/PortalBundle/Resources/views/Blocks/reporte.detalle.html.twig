               <th>Tarjetas</th>
               <th>FB</th>
               <th>Total</th>
             </tr>

           </thead>
           <tbody>
            {% for envio in envios %}
            <tr>
              <td>{{ envio.numero }}</td>
              <td></td>
              <td>{{ envio.nombre }}</td>
              
              <td> 
                {% if envio.sexo == '1' %}
                Hombre  
                {% else %}
                Mujer  
                {% endif %} 
              </td>
              <td> {{  envio.edad }}</td>
              <td> 3</td>
              <td> 1</td>
              <td> 1/10</td>
              <td>1/1 </td>
              <td> 1/1</td>
              <td>0/1 </td>
              <td>3/10 </td>
            </tr>

            {% endfor %}


          </tbody>
        </table>


      </div>
    </div>
    <br/>
    <br/>
    <br/>
  </div>
</div>
</div>



