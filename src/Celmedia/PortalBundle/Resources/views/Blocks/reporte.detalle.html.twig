<div class="card">
  <h3 class="card-heading simple">Detalle por usuario</h3>
  <div class="card-body">
    <div class="row-fluid">
      <div class="span12">
        <div  style="position:relative;height:200px;" >


          <table class="table table-bordered table-striped  table-hover">
            <thead>
              <tr>
                <th></th>
                <th>Interactividad</th>
                <th>Nombre</th>
                <th>Sexo</th>
                <th>Edad</th>
                <th colspan="2" style="text-align:center;"  >Redencion</th>
              
