{% block form_row %}
{% spaceless %}
<div class="control-group">
	{{ form_label(form , null , { 'label_attr': {'class': 'control-label '  } }) }}
	<div class="controls"  >
		
		{% if help is defined %}
		<span class="help_text">{{ help }}</span>
		{% endif %}

		{% if help_bold is defined %}
		<span style="font-weight:bold;color:black;" class="help_text">{{ help_bold }}</span>
		{% endif %}

		{{ form_widget(form ) }}

		{% if help_bot is defined %}
		<span class="help_text">{{ help_bot }}</span>
		{% endif %}

		<div  style="color:red;" >
			{{ form_errors(form) }}
		</div>
	</div>	
</div>



{% endspaceless %}
{% endblock form_row %}