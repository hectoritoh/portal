{%   extends("CelmediaPortalSmsBundle::layout.html.twig") %}


{% block contenido %}

<div id="page-wrapper">

	<div class="row">
		<div class="col-lg-12">
			<h1>Campañas <small>Mantenimiento</small></h1>
			<ol class="breadcrumb">
				<li class="active"><i class="fa fa-bullhorn"></i> Campañas</li>
			</ol>
		</div>
	</div>


	<!--  Hi {{   app.user.grupos | length  }} -->

	<div class="row">
		<div class="col-lg-8">


			{% if not form.vars.valid %}
			<div class="alert alert-error">


				<div class="alert alert-dismissable alert-danger">
					<button data-dismiss="alert" class="close" type="button">×</button>
					<strong>Error Ctm!</strong> {{ form_errors(form) }}

				</div>

			</div>
			{% endif %}



			<div class="row">
				<div class="col-lg-6">

					<form role="form" action="{{  path('campana') }}" method="post" {{ form_enctype(form) }}>

						<div class="form-group">
							{{ form_label(form.nombre) }}
							{{ form_widget(form.nombre  , {'attr': {'class': 'form-control'}} ) }}							
						</div>

						<div class="form-group">
							<label>Objetivo</label>
							{{ form_widget(form.objetivo  , {'attr': {'class': 'form-control'}} ) }}
						</div>

						<div class="form-group">
							<label>Descripcion</label>
							{{ form_widget(form.descripcion  , {'attr': {'class': 'form-control' , 'row':3 }} ) }}
						</div>


						{{  form_row(  form._token ) }}


						<button class="btn btn-default" type="submit">Grabar</button>
						<button class="btn btn-default" type="reset">Clear</button>  

					</form>

				</div>

			</div>



		</div>
	</div>


</div>

{% endblock %}