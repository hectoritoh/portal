{%   extends("CelmediaPortalSmsBundle::layout.html.twig") %}


{% block contenido %}

<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Grupo <small>Mantenimiento</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-bullhorn"></i> Grupos</li>
      </ol>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-8">


      {% if not form.vars.valid %}
      <div class="alert alert-error">


        <div class="alert alert-dismissable alert-danger">
          <button data-dismiss="alert" class="close" type="button">Ã—</button>
          <strong>Error Ctm!</strong> {{ form_errors(form) }}

        </div>

      </div>
      {% endif %}

      

      <div class="row">
        <div class="col-lg-6">

         <form role="form" action="{{  path('grupos') }}" method="post" {{ form_enctype(form) }}>

          <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre  , {'attr': {'class': 'form-control'}} ) }}
            <p class="help-block">Example block-level help text here.</p>
          </div>


          <div class="form-group">
            <label>Descripion</label>
            {{ form_widget(form.descipcion  , {'attr': {'class': 'form-control' , 'row':3 }} ) }}
          </div>


          <div class="form-group">
            <label>Campanas</label>
            {{ form_widget(form.clientes  , {'attr': {'class': 'form-control' }} ) }}
          </div>




          {{  form_row(  form._token ) }}


          <button class="btn btn-default" type="submit">Grabar</button>
          <button class="btn btn-default" type="reset">Clear</button>  

        </form>

      </div>

    </div>



  </div>
</div>








</div>

{% endblock %}



