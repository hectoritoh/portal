{%   extends("CelmediaPortalSmsBundle::layout.html.twig") %}


{% block contenido %}

<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Portal SMS <small>Promociones</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-home"></i> Promociones</li>
      </ol>

    </div>
  </div><!-- /.row -->

  <div class="row">

    <div class="col-lg-6 col-lg-offset-2  ">


      <div class="panel-group" id="accordion">



        <div class="panel panel-warning">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                <i class="fa fa-envelope fa-1x"></i>  ENVIO DE MENSAJE
              </a>
            </h4>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
              
              

              <form id="form" class="ajax" role="form" action="{{  path('mensaje') }}" method="post" {{ form_enctype(form) }}>

                <div class="form-group">
                  {{ form_label(form.nombre) }}
                  {{ form_widget(form.nombre  , {'attr': {'class': 'form-control'}} ) }}              
                </div>


                <div class="form-group">
                  <label>Mensaje</label>
                  {{ form_widget(form.mensaje  , {'attr': {'class': 'form-control' , 'row':3 }} ) }}
                </div>


                {{  form_row(  form._token ) }}


                <button class="btn btn-default" type="submit">Siguiente</button>
                <button class="btn btn-default" type="reset">Clear</button>  

              </form>


            </div>
          </div>
        </div>

      </div>

    </div>

  </div><!-- /.row -->


</div><!-- /#page-wrapper -->
<style type="text/css">

  .panel-warning > .panel-heading {
    color: #E69C1D;
    }

</style>
{% endblock %}
